# ==============================================
# REQUIRED ENVIRONMENT VARIABLES
# ==============================================

# Discord Bot & CloudFlare Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_application_client_id_here
CLOUDFLARE_TOKEN=your_cloudflare_token

# ==============================================
# SERVER CONFIGURATION
# ==============================================

# Basic Server Information
SERVER_NAME=UnixMc
SERVER_VERSION=1.8+
SERVER_DESCRIPTION=A Best Survival Server
SERVER_TYPE=Java  # Java or Bedrock
SERVER_LOCATION=India
SERVER_REGION=Asia/Kolkata
SERVER_OWNER=UnixMc Team
SERVER_STARTED=2025-12-09

# Server Hosts (JSON array format)
SERVER_HOSTS=[{"ip":"play.exmaple.net","port":"25565"}]

# Alternative SERVER_HOSTS format for multiple servers:
# SERVER_HOSTS=[{"ip":"play.unixnodes.xyz","port":"19136"}, {"ip":"backup.unixnodes.xyz","port":"25565"}]

# ==============================================
# WEBSITE & SOCIAL LINKS
# ==============================================

# Website URL
SERVER_WEBSITE=https://unixnodes.xyz

# Discord Invite Link
DISCORD_INVITE=https://discord.gg/gXA6r99Fky

# Social Media Links
TWITTER_URL=
YOUTUBE_URL=https://www.youtube.com/@hopingboyz
TELEGRAM_URL=
INSTAGRAM_URL=https://www.instagram.com/hopingboyz/
VOTE_URL=

# ==============================================
# APPLICATION SETTINGS
# ==============================================

# Web Server Port
PORT=3000

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Node Environment (development, production)
NODE_ENV=production

# ==============================================
# SECURITY & ADMINISTRATION
# ==============================================

# Admin Panel Access Token
ADMIN_TOKEN=your_secure_admin_token_here

# ==============================================
# OPTIONAL ADVANCED CONFIGURATION
# ==============================================

# Cache Settings (in seconds)
CACHE_TTL=15

# Monitoring Interval (in milliseconds)
MONITORING_INTERVAL=15000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# API Timeout (in milliseconds)
API_TIMEOUT=10000

# ==============================================
# FEATURE TOGGLES
# ==============================================

# Enable/Disable Features (true/false)
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_ADMIN_PANEL=true

# ==============================================
# EXTERNAL API SETTINGS
# ==============================================

# API Endpoints (comma separated)
ENABLED_API_ENDPOINTS=mcsrvstat_v3,mcstatus_java
# For Bedrock: ENABLED_API_ENDPOINTS=mcsrvstat_bedrock,mcstatus_bedrock

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================

# History Limit
MAX_HISTORY_ENTRIES=500

# Player List Limit
MAX_PLAYERS_DISPLAY=50

# Memory Monitoring
ENABLE_MEMORY_MONITORING=true